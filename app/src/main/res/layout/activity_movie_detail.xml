<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="86dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/movie"
                android:id="@+id/imageView"
                android:layout_alignRight="@id/textView6"
                android:layout_weight="1"

        />
    </LinearLayout>
    <TextView
            android:text="Title:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"

    />
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/title"
            android:textSize="18sp"
            />
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <TextView
            android:text="Overview:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/textView8"
    />
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/overview" android:textSize="18sp"/>
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />

    <TextView
            android:text="Release date:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView12"/>
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:id="@+id/date"/>
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />

    <TextView
            android:text="Language:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView10"/>
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:id="@+id/language"/>
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <TextView
            android:text="Reviews:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView45"/>
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBarD"
            android:visibility="gone"
            android:isIndicator="true"

    />
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content" android:id="@+id/reviews"/>
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <TextView
            android:text="Suitable for children below 13:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/theSuit"/>
    <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp"
    />
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:id="@+id/suit"/>
</LinearLayout>
